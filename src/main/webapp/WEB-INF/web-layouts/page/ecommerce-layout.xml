<?xml version="1.0" ?>
<pages>
  <!-- Cart Pages -->
  <page name="/cart" title="Your Shopping Bag">
    <section class="align-center">
      <column class="small-12 medium-11 cell">
        <widget name="cart">
          <title>Your bag</title>
          <emptyMessage>Your bag is empty.</emptyMessage>
          <card1uniqueId>cart-card1</card1uniqueId>
          <card2uniqueId>cart-card2</card2uniqueId>
        </widget>
      </column>
    </section>
  </page>

  <page name="/checkout" title="Checkout" class="platform-ecommerce">
    <section class="align-center margin-top-50 small-margin-top-30">
      <column class="small-12 medium-11 cell">
        <widget name="content">
          <html><![CDATA[<h1>Checkout</h1>]]></html>
        </widget>
      </column>
    </section>
    <section class="align-center">
      <column class="small-12 medium-7 small-order-2 medium-order-1 cell">
        <widget name="globalMessage">
          <key>orderError</key>
          <type>error</type>
        </widget>
        <widget name="content">
          <html><![CDATA[<hr /><h2 class="checkout-stage-title">1. Shipping Address</h2>]]></html>
        </widget>
        <widget name="shippingAddressForm" />
        <widget name="content">
          <html><![CDATA[
          <hr /><h2 class="checkout-stage-title stage-next">2. Delivery Options</h2>
          <hr /><h2 class="checkout-stage-title stage-next">3. Billing Details</h2>
          <hr /><h2 class="checkout-stage-title stage-next">4. Order Updates / Account Creation</h2>
          <hr /><h2 class="checkout-stage-title stage-next">5. Order Review</h2>
          <hr /><button class="button primary" disabled>Place Order</button>
        ]]></html>
        </widget>
      </column>
      <column class="small-12 medium-4 small-order-1 medium-order-2 cell">
        <widget name="cart" class="callout box checkout-summary-callout" sticky="true">
          <title>Summary</title>
          <view>summary</view>
        </widget>
      </column>
    </section>
  </page>

